<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_window_focused="false" android:state_enabled="true"
        android:drawable="@drawable/oppo_option_menu_bar_major_operation_item_bg_default_normal" />
    <item android:state_window_focused="false" android:state_enabled="false"
        android:drawable="@drawable/oppo_option_menu_bar_major_operation_item_bg_default_disable" />

    <item android:state_pressed="true" 
        android:drawable="@drawable/oppo_option_menu_bar_major_operation_item_bg_default_pressed" />
    <item android:state_enabled="true"
        android:drawable="@drawable/oppo_option_menu_bar_major_operation_item_bg_default_normal" />
    <item
         android:drawable="@drawable/oppo_option_menu_bar_major_operation_item_bg_default_disable" />

</selector>
