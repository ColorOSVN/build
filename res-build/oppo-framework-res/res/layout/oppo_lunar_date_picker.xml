<?xml version="1.0" encoding="utf-8"?>


<!-- Layout of date picker-->

<!-- Warning: everything within the "pickers" layout is removed and re-ordered
     depending on the date format selected by the user.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:oppo="http://schemas.android.com/apk/res/oppo" 
    android:id="@+id/pickers"
    android:layout_width="@oppo:dimen/oppo_timepicker_width"
    android:layout_height="@oppo:dimen/oppo_timepicker_height"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:gravity="center"
	android:background="@drawable/oppo_picker_full_bg"
	android:paddingLeft="8dip"
	android:paddingRight="8dip">
    
        <!-- Month -->
		<com.oppo.widget.OppoNumberPicker
            android:id="@+id/month"
        	android:layout_width="@oppo:dimen/oppo_small_numberpicker_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:focusable="true"
            
             oppo:offsetHeight="-2dip"
             oppo:endTextSize="@oppo:dimen/oppo_numberpicker_middle_textSize"
              
            android:focusableInTouchMode="true"
            />

        <!-- Day --><!--oppo:offsetHeight="-2dip"-->
        <com.oppo.widget.OppoNumberPicker
            android:id="@+id/day"
        	android:layout_width="@oppo:dimen/oppo_small_numberpicker_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:focusable="true"
            
            oppo:offsetHeight="-2dip"
            oppo:endTextSize="@oppo:dimen/oppo_numberpicker_middle_textSize"

            android:focusableInTouchMode="true"
            />

        <!-- Year -->
        <com.oppo.widget.OppoNumberPicker
            android:id="@+id/year"
        	android:layout_width="@oppo:dimen/oppo_big_numberpicker_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:focusable="true"          
            oppo:clipLength="@oppo:dimen/oppo_big_numberpicker_clipLength"
            android:focusableInTouchMode="true"
            />

</LinearLayout>
