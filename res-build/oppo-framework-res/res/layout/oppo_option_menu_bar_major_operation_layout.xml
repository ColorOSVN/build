<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MajorOperationsGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/oppo_option_menu_bar_major_operation_item_top_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/oppo_option_menu_bar_major_operation_group_padding"
    android:paddingRight="@dimen/oppo_option_menu_bar_major_operation_group_padding"
    android:showDividers="middle"
    android:splitMotionEvents="false" >

    <com.oppo.widget.OppoOptionMenuBarItem
        android:id="@+id/MajorOperationButtonPositive"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_marginRight="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone" />

    <com.oppo.widget.OppoOptionMenuBarItem
        android:id="@+id/MajorOperationButtonNegative"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_marginRight="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone" />

    <com.oppo.widget.OppoOptionMenuBarItem
        android:id="@+id/MajorOperationButtonNeutral"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_marginRight="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone" />

    <com.oppo.widget.OppoOptionMenuBarItem
        android:id="@+id/MajorOperationButtonMore"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_marginRight="@dimen/oppo_option_menu_bar_major_operation_item_padding"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>