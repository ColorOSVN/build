<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oppo="http://schemas.android.com/apk/res/oppo"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"> 
    <LinearLayout    
        android:id="@+id/oppo_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/home_back"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/oppo_search_margin_left"
            android:layout_marginEnd="@dimen/oppo_search_margin_right"
            android:background="?android:attr/homeAsUpIndicator"/>
        <SearchView
            android:id="@+id/search_vew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>
    <ImageView 
        android:id="@+id/anim_search_vew"
        android:layout_width="match_parent"
        android:layout_height="36dip"        
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:layout_marginStart="8dip"
        android:layout_marginEnd="8dip"
        android:background="?oppo:attr/oppoSearchAnimTextField"
        android:visibility="gone"/>
</RelativeLayout>