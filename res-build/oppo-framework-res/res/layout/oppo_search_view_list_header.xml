<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:layout_marginStart="12dip"
        android:layout_marginEnd="12dip"
        android:orientation="horizontal">
        <!-- Inner layout contains the app icon, button(s) and EditText -->
        <LinearLayout
            android:id="@+id/search_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/oppo_textfield_search_default"
            >

            <TextView
                android:id="@+id/search_src_text"
                android:layout_height="36dip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minWidth="@*android:dimen/search_view_text_min_width"
                android:layout_gravity="center_vertical"
                android:gravity="center|left"
                android:paddingLeft="@*android:dimen/dropdownitem_text_padding_left"
                android:paddingRight="@*android:dimen/dropdownitem_text_padding_right"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@null"
                android:textSize="@dimen/oppo_searchview_text_hint_size"
                android:textColorHint="@oppo:color/oppo_searchview_text_hint_color_normal"
            />

            <ImageView
                android:id="@+id/oppo_search_src_voice"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:background="@drawable/oppo_searchview_voice"
                android:layout_marginRight="@dimen/oppo_searchview_voice_padding_right"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
