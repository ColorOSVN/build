<!-- Layout of time picker -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oppo="http://schemas.android.com/apk/res/oppo" 
    android:id="@+id/time_pickers"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@drawable/oppo_picker_full_bg"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
   
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

	<!-- AM / PM -->
    <com.oppo.widget.OppoNumberPicker
        android:id="@+id/amPm"
        android:layout_width="@oppo:dimen/oppo_big_numberpicker_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:focusable="true"
        oppo:clipLength="@oppo:dimen/oppo_big_numberpicker_clipLength"
        oppo:offsetHeight="-2dip"  
        oppo:endTextSize="@oppo:dimen/oppo_numberpicker_middle_textSize"
        
        android:focusableInTouchMode="true"
        />

    <!-- hour -->
    <com.oppo.widget.OppoNumberPicker
        android:id="@+id/hour"
        android:layout_width="@oppo:dimen/oppo_small_numberpicker_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
        
        <!-- divider -->
	<!--
    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="#2182ad"
        android:layout_gravity="center_vertical"
        />
    -->
    <!-- minute -->
    <com.oppo.widget.OppoNumberPicker
        android:id="@+id/minute"
        android:layout_width="@oppo:dimen/oppo_small_numberpicker_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

</LinearLayout>
