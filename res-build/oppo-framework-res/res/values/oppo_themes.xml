    </style>

    <!-- Default theme for translucent activities, that is windows that allow you
         to see through them to the windows behind.  This sets up the translucent
         flag and appropriate animations for your windows.  -->
    <style name="Theme.OPPO.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>  

    <!-- Variant of the translucent theme with no title bar -->
    <style name="Theme.OPPO.Translucent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Default holographic (dark) for windows that want to have the user's selected
         wallpaper appear behind them.  -->
    <style name="Theme.OPPO.Wallpaper">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <!-- Variant of the holographic (dark) theme with no title bar -->
    <style name="Theme.OPPO.Wallpaper.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

<!-- ################################## Black Oppo Themes ################################## -->

    <!-- Special variation on the default theme that ensures the background is
         completely black.  This is useful for things like image viewers and
         media players.   If you want the normal (light background) theme
         do <em>not</em> use this, use Theme.OPPO. -->
    <style name="Theme.OPPO.Black">
        <!-- =============== oppo attrs =============== -->
        <item name="oppoThemeType">black</item>
        <item name="oppoListViewStyle">@style/Widget.OPPO.OppoListView.Black</item>
        <item name="oppoSwitchStyle">@style/Widget.OPPO.CompoundButton.OppoSwitch.Black</item>
        <item name="oppoSearchAnimTextField">@drawable/oppo_textfield_search_anim_default_black</item>
        <item name="oppoScrollingTabContainerViewStyle">@style/Widget.OPPO.OppoScrollingTabContainerView.Black</item>
        <item name="oppoOptionMenuBarStyle">@style/Widget.OPPO.OppoOptionMenuBar.Black</item>
        <item name="oppoEmptyHint">@drawable/oppo_empty_bottle_dark</item>
        <item name="oppoWindowContentOverlay">@null</item>
        <item name="textAppearanceSubSmall">@style/OppoListViewTextAppearance.Small.Black</item>
        <!-- =============== android attrs =============== -->
        <!-- Text styles -->
        <item name="android:textAppearanceLarge">@style/OppoListViewTextAppearance.Large.Black</item>
        <item name="android:textAppearanceMedium">@style/OppoListViewTextAppearance.Large.Black</item>
        <item name="android:textAppearanceSmall">@style/OppoListViewTextAppearance.Small.Black</item>
        <item name="android:editTextColor">#ffacacac</item>
        <!-- List attributes -->
        <item name="android:listChoiceIndicatorSingle">@drawable/oppo_btn_radio_black</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/oppo_btn_check_black</item>
        <item name="android:listPreferredItemHeight">@dimen/oppo_list_item_normal_height_balck</item>
        <item name="android:textAppearanceListItemSmall">?android:attr/textAppearanceMedium</item>
        <!-- Window attributes -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/black</item>
        <!-- SearchView attributes -->
        <item name="*android:searchViewTextField">@drawable/oppo_textfield_search_black</item>
        <item name="*android:searchViewSearchIcon">@drawable/oppo_ic_search_black</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.OPPO.AutoCompleteTextView.Black</item>
        <item name="android:textCursorDrawable">@drawable/oppo_text_cursor_default_black</item>
        <!-- actionbar style -->
        <item name="android:actionBarStyle">@style/Widget.OPPO.ActionBar.Black</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.OPPO.ActionBar.TabText.Black</item>
        <item name="android:actionBarTabBarStyle">@style/Widget.OPPO.ActionBar.TabBar.Black</item>
        <!-- Preference styles -->
        <item name="android:preferenceCategoryStyle">@style/Preference.OPPO.Category.Black</item>
        <!-- Widget style -->
        <item name="android:listViewStyle">@style/Widget.OPPO.OppoListView.Black</item>
    </style>

    <!-- Variant of the black theme with no title bar -->
    <style name="Theme.OPPO.Black.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>
	
    <style name="Theme.OPPO.Layer" parent="Theme.OPPO">
        <item name="android:windowAnimationStyle">@style/Animation.OPPO.Layer</item>
    </style>
    <style name="Theme.OPPO.NoTitleBar.Layer" parent="Theme.OPPO.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.OPPO.Layer</item>
    </style>
    <style name="Theme.OPPO.NoActionBarShadow.Layer" parent="Theme.OPPO.NoActionBarShadow">  
        <item name="android:windowAnimationStyle">@style/Animation.OPPO.Layer</item>
    </style>
    
    <style name="Theme.OPPO.Task" parent="Theme.OPPO">
        <item name="android:windowAnimationStyle">@style/Animation.OPPO.Task</item>
    </style>
    <style name="Theme.OPPO.NoTitleBar.Task" parent="Theme.OPPO.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.OPPO.Task</item>
    </style>
    <style name="Theme.OPPO.NoActionBarShadow.Task" parent="Theme.OPPO.NoActionBarShadow">  
        <item name="android:windowAnimationStyle">@style/Animation.OPPO.Task</item>
    </style>
</resources>
